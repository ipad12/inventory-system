<% include partials/header.ejs %>
    <div class="table-wrapper">
        <% if (items.length > 0) {%>
            <table class="table table-hovered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Name</th>
                        <th scope="col">Quantity</th>
                        <th scope="col">Amount</th>
                    </tr>
                </thead>
                <tbody>
                    <% items.forEach((items, index) => { %>
                        <tr>
                            <th scope="row"><%= items.id %></th>
                            <td><%= items.item_name %></td>
                            <td><%= items.qty %></td>
                            <td><%= items.amount %></td>
                            <td>
                                <a href="/edit/<%= items.id %>" target="_blank" rel="noopener" class="btn btn-sm btn-success">Edit</a>
                                <a href="/delete/<%= items.id %>" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p class="text-center">No items found. Go <a href="/add" >here</a> to add items.</p>
        <% } %>
    </div>
</div>
</body>
</html>
